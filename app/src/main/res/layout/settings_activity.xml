<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

		<TextView
			android:id="@+id/tv_overlay_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="bottom|center"
			android:text="@string/tv_overlay_info"
			android:textSize="36sp" />

        <Button
            android:id="@+id/goto_overlay_perm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goto_overlay_perm_button" />
		<FrameLayout
			android:id="@+id/settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		</FrameLayout>

		<LinearLayout
			style="android:attr/buttonBarStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">

			<Button
				android:id="@+id/close_settings_button"
				style="android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/close_settings_button" />

			<Button
				android:id="@+id/test_screenlock_button"
				style="android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/test_button" />

			<Button
				android:id="@+id/credit_button"
				style="android:attr/buttonBarButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/credit_button" />

		</LinearLayout>
    </LinearLayout>
</ScrollView>
